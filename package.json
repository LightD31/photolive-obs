{
  "name": "photolive-obs",
  "version": "1.0.0",
  "description": "Real-time photo slideshow application for OBS Studio with automatic folder monitoring and web interface",
  "main": "server.js",
  "homepage": ".",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
